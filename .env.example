# =============================================================================
# Backend environment variables
# Copy to .env and set values. Never commit .env or real secrets.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (required)
# -----------------------------------------------------------------------------
# Development
DATABASE_URL="postgresql://username:password@localhost:5432/inventory_db?schema=public"
# Production: use your hosted PostgreSQL URL (e.g. Render, Supabase, Neon, Railway)
# DATABASE_URL="postgresql://user:password@host:5432/dbname?schema=public"

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=3001
# Production: set to "production" so stack traces are hidden and logging is production-style
NODE_ENV=development

# -----------------------------------------------------------------------------
# JWT (required for auth)
# -----------------------------------------------------------------------------
# Development only â€“ MUST change in production. Use a long random string (e.g. 32+ chars).
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# Allowed origins for API requests (comma-separated). Leave empty to allow same origin only.
# Development: frontend on different port
ALLOWED_ORIGINS=http://localhost:3000
# Production (single app): frontend is same origin; set to your app URL if you need explicit origin, e.g.:
# ALLOWED_ORIGINS=https://your-app.example.com

# -----------------------------------------------------------------------------
# App (optional)
# -----------------------------------------------------------------------------
APP_NAME="Diaso Inventory System"
DEFAULT_LOCATION=Diaso
